package 일차원배열;

import java.util.Scanner;

public class Ex06배열 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		int num = sc.nextInt(); // 7
		
		for (int i = 1; i <= num; i++) {
		    for (int j = 1; j <= num+1-i; j++) {
		        System.out.print("*");
		    }
		    System.out.println("");
		}
		
		int[] arr = new int [5];
		arr[0] = 2;
		arr[1] = 4;
		arr[2] = 6;
		arr[3] = 8;
		arr[4] = 3;
		
		for (int i : arr) {
		    System.out.print(i + " ");
		}
		
		int[] arr2 = new int [8];
		arr2[0] = 10;
		arr2[1] = 56;
		arr2[2] = 21;
		int maxV = arr2[0];
		int minV = arr2[0];
		
		for (int i : arr2) {
		    if (i >= maxV) {
		        maxV = i;
		    }
		    if (i <= minV) {
		        minV = i;
		    }
		}
		System.out.print(maxV);
		System.out.print(minV);
		
		
		int [] arr3 = new int [5];
		
		for (int i=0; i<=4; i++) {
		    System.out.print(i + "번째 별의 수 : ");
		    arr3[i] = sc.nextInt();
		}
		
		for (int i : arr3) {
		    System.out.print(i+" : ");
		    for (int j = 1; j <= i; j++) {
		        System.out.print("*");
		    }
		    System.out.println("");
		}
			
		}

}
