
public class Ex03자료형 {

	public static void main(String[] args) {
		// 1. 논리형
		// 1) boolean : 1byte(8bit - 2**8)
		// true/false 값만 저장
		
		boolean isHot = true;
		System.out.println(isHot);
		
		// 2. 문자형
		// 1) char : 2byte
		// 문자 한 개를 저장
		// ''(작은따옴표)로 감싸줘야 한다.
		// 유니코드 문자도 저장 가능.
		
		char firstName = '방';
		System.out.println(firstName);

		// 3. 정수형
		// 1) byte : 1byte ( -127 ~ 127 )
		byte num1 = 127;
		
		// 2) short : 2byte(16bit)
		short num2 = 128;
		
		// 3) int : 4byte - 기본 정수 자료형
		// -21억 ~ 21억
		int num3 = 12345;
		
		// 4) long : 8byte
		
		// 4. 실수형 : 소숫점이 붙은 숫자들
		// 1) float : 4byte
		float pi2 = (float) 3.141592;
		
		// 2) double : 8byte
		double pi1 = 3.141592;
		
		// * 형변환 (Cast)
		// 1. 강제형변환 (명시적 형변환)
		// - 큰 자료형을 작은 자료형의 변수에 담을 때
		// 명시를 하는 이유 : 이곳에서 손실값이 발생할 수도 있다는 걸 알림
		// 2. 자동형변환 (묵시적 형변환)
		// - 작은 자료형을 큰 변수에 담을 때
		double pi3 = pi2;
		
		// char에 문자 한 개도 담을 수 있고, 유니코드도 가능
		
		int num = 97;
		// char 자료형으로 형변환해서 출력했을 때 a라는 문자 한 개가 console 창에 보이는 지 확인
		
		char ch = (char) num;
		System.out.println(ch);
		
	}

}
