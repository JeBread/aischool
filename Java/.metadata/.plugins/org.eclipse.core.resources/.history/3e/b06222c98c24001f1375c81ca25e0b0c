package 일차원배열;

import java.util.Random;
import java.util.Scanner;

public class Ex06배열 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		Random rd = new Random();
		
		int num = sc.nextInt(); // 7
		
		for (int i = 1; i <= num; i++) {
		    for (int j = 1; j <= num+1-i; j++) {
		        System.out.print("*");
		    }
		    System.out.println("");
		}
		
		int[] arr = new int [5];
		arr[0] = 2;
		arr[1] = 4;
		arr[2] = 6;
		arr[3] = 8;
		arr[4] = 3;
		
		for (int i : arr) {
		    System.out.print(i + " ");
		}
		
		int[] arr2 = new int [8];
		arr2[0] = 10;
		arr2[1] = 56;
		arr2[2] = 21;
		int maxV = arr2[0];
		int minV = arr2[0];
		
		for (int i : arr2) {
		    if (i >= maxV) {
		        maxV = i;
		    }
		    if (i <= minV) {
		        minV = i;
		    }
		}
		System.out.print(maxV);
		System.out.print(minV);
		
		
		int aaa = rd.nextInt(10);
		
		int [] arr3 = new int [5];
		
		for (int i=0; i<=4; i++) {
		    System.out.print(i + "번째 별의 수 : ");
		    arr3[i] = sc.nextInt();
		}
		
		for (int i : arr3) {
		    System.out.print(i+" : ");
		    for (int j = 1; j <= i; j++) {
		        System.out.print("*");
		    }
		    System.out.println("");
		}
		
		// [배열] : Array
		// 같은 자료형의 데이터들을 관리할 수 있도록 도와주는 자료구조
		
		// 1) 배열을 선언 및 생성
		// 자료형[] 배열명 = new 자료형 [배열의 크기];
		// 자료형 - 내가 저장하고 싶은 데이터의 타입
		// [] - 배열
		// 배열명 - 레퍼런스형 변수명(주소값)
		// 배열은 크기를 한 번 정해놓으면 뒤쪽에서 바꿀 수 없다.
		// 배열은 인덱스에 상응하는 구조를 가지고 있다.
		
		
			
		}

}
