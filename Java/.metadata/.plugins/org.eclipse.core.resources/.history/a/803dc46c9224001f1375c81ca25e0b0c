package 일차원배열;

import java.util.Scanner;

public class Ex07배열 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		int [] arr = new int [5];
		
		for (int i = 0; i < 5 ; i++) {
			System.out.print(i+1+" 번째 별의 개수 입력 : ");
			arr[i] = sc.nextInt();
		}
		
		for (int i: arr) {
			System.out.print(i + ":");
			for (int j = 0; j < i; j++) {
				System.out.print("*");
			}
			System.out.println("");
		}
		
		
		
		
		
		

	}

}
