package while문;

import java.util.Scanner;

public class ex예제1 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
        System.out.print("5월 판매 보험개수 : ");
	    int sale = sc.nextInt();
	    int result = 500000;
	    
	    if (sale < 20) {
	    	result = 500000 - 50000 * (20 - sale);
	    	if (result < 0) {
	    		result = 0;
	    	}
	    } else {
	    	result += (sale * 50000);
	    }
	    

	}

}
